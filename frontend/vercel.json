{
    "version": 2,
    "builds": [
      {
        "src": "api/gemini.cjs",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/gemini.cjs" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }
  